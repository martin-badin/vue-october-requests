{
  "parser": "babel-eslint",
  "plugins": ["flowtype"],
  "extends": ["eslint:recommended"],
  "rules": {
    "no-console": "off",
    "no-useless-escape": "off"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "document": false,
    "escape": false,
    "navigator": false,
    "unescape": false,
    "window": false,
    "describe": true,
    "before": true,
    "it": true,
    "expect": true,
    "sinon": true
  }
}
